<h3>All Flights for <%= @plane.name %></h3>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Plane</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.plane_id %></td>
        <td><%= link_to 'Show', plane_flight_path(@plane, flight) %></td>
        <td><%= link_to 'Edit', edit_plane_flight_path(@plane, flight) %></td>
        <td><%= link_to 'Destroy', plane_flight_path(@plane, flight), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_plane_flight_path %>
